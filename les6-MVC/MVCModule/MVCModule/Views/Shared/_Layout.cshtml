<!DOCTYPE html>

<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <title>Dr. Vogels and Dr. Philippaerts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div id="main">
        <div id="header">
            <div id="logo">
                <span id="logoleft">Vogels</span> <span id="logoright">Philippaerts</span><br />
                <!-- THIS IS WHERE A TAGLINE SHOULD GO -->
                @{ Html.RenderAction("TagLine", "Shared"); }
            </div>
            <div id="loginview">
                <!-- THIS IS WHERE A LOGIN/LOGOUT LINK SHOULD GO -->
                @if (Request.IsAuthenticated)
                {
                    <p>Logged in as @User.Identity.Name.  @Html.ActionLink("[logout]", "Logout", "Account") </p>
                }
                else
                {
                    <p><a href="/Account/Login">[login]</a></p>
                }
            </div>
            <div class="clear"></div>
        </div>
        <div id="menu">
            <!-- THIS IS WHERE THE MENU SHOULD GO -->
            @{ Html.RenderAction("Menu", "Shared"); }
        </div>
        <div id="content">
            @RenderBody()
        </div>
        <div id="footer">
            Page generated at @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss").
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
